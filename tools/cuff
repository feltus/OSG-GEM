#!/bin/bash

set -e

module load java/8u25
module load cufflinks/2.2.1

set -v

BASE_NAME=$1

cufflinks -o $BASE_NAME.cuff -G Mt4.0v1_genes_20130731_1800.gff3 *.bam

cp $BASE_NAME.cuff/transcripts.gtf .

cuffcompare -o sample_counts -r Mt4.0v1_genes_20130731_1800.gff3 *.gtf

perl perl_cufflinks_parse.txt sample_counts.tracking > $BASE_NAME-merged_counts.fpkm

